<div class="container">
  <div class="d-flex justify-content-center w-100 my-3">
    <ul class="list-group list-group-flush list-group-horizontal">
      <% @grid.each do |letter| %>
        <li class="list-group-item fs-1 bg-primary text-white mx-3">
          <%= letter %>
        </li>
      <% end %>
    </ul>
  </div>

  <form action="score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="input-group">
        <input type="text" name="attempt" class="form-control" placeholder="Type your attempt here">
        <input type="submit" class="btn btn-primary" value="sub">
    </div>
    <input type="text" name="grid" class="d-none" value="<%=@grid.join("-")%>">
  </form>
</div>
