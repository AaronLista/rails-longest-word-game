<div class="container">

  <div class="row mt-5 mb-5">
    <% @grid.each do |letter| %>
      <div class="col">
        <div class="card bg-primary" style="width: 5rem;">
          <p class="text-center fs-2" style="color: #fff;">
            <%= letter %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <form action="score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="input-group">
        <input type="text" name="attempt" class="form-control" placeholder="Type your attempt here">
        <input type="submit" class="btn btn-primary" value="sub">
    </div>
    <input type="text" name="grid" class="d-none" value="<%=@grid.join("-")%>">
  </form>
</div>
